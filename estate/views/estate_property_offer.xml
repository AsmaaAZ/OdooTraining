<odoo>
    <record id="real_estate_offer_tree" model="ir.ui.view">
        <field name="name">Real Estate Offer Tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Offers" >
                <field name="price" />
                <field name="partner_id" />
                <field name="validity" />
                <field name="date_deadline" />
                <button name="accept_offer" string = "accept" type="object" icon="fa-check-square"/>
                <button name="refuse_offer" string = "refuse" type="object" icon="fa-window-close"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="real_estate_offer_form" model="ir.ui.view">
        <field name="name">Property Offer Form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price" />
                        <field name="partner_id" />
                        <field name="validity" />
                        <field name="date_deadline" />
                        <field name="status" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>