<odoo>
    <record id="real_estate_report_action" model="ir.actions.report">
        <field name="name">Real Estate User</field>
        <field name="model">res.users</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">estate.report_property_users</field>
        <field name="report_file">estate.report_property_users</field>
        <field name="binding_model_id" ref="model_res_users"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_property_users">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <h2>
                                <strong>Salesman</strong>
                                <span t-field="user.name" />
                            </h2>
                        </div>
                        <t t-set="properties" t-value="user.mapped('offer_ids')"/>
                        <t t-foreach="properties" t-as="property">
                            <t t-call="estate.report_property_offers" />
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>