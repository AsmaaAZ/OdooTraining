<odoo>
    <record id="library_author_model_action" model="ir.actions.act_window">
        <field name="name">Library Author</field>
        <field name="res_model">library.author</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="library_author_form" model="ir.ui.view">
        <field name="name">Library Author</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button type="object" name="number_of_books" string="How many book did this author write??" />
                        <h1><field name="number_of_books_per_author" invisible="not show_number" readonly='true'/></h1>
                    </header>
                    <group>
                        <field name="name" string="Author Name"/>
                        <field name="birth_date" string="Author Birth Day"/>
                        <field name="book_ids" string="Book Name"/>
                        <field name="total_books" string="Total Books"/>
                        <field name="show_number" invisible="true"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="library_author_tree" model="ir.ui.view">
        <field name="name">Library Author Tree</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <tree string="Library Author">
                <field name="name" string="Author Name"/>
                <field name="birth_date" string="Author Birth Date"/>
            </tree>
        </field>
    </record>
</odoo>
